{
  "variables": {
    "wifi_name": "",
    "wifi_password": "",
    "home": "{{env `HOME`}}"
  },
  "builders": [{
    "type": "arm",
    "file_urls" : ["http://os.archlinuxarm.org/os/ArchLinuxARM-odroid-xu3-latest.tar.gz?archive=false"],
    "file_checksum": "2f6f1df2ae833b769fe640e832dffcc3efb89f38a4519242936e01cb9681feac",
    "file_checksum_type": "sha256",
    "file_unarchive_cmd": ["bsdtar", "-xpf", "$ARCHIVE_PATH", "-C", "$MOUNTPOINT"],
    "file_target_extension": "tar.gz",
	"image_path": "odroid-xu4.img",
	"image_size": "2G",
	"image_partitions": [
		{
			"name": "root",
			"type": 8300,
			"size": "+10M",
			"start_sector": "4096",
			"filesystem": "ext4",
			"size": "0",
            "mountpoint": "/"
		}
	],
	"qemu_binary_source_path": "/usr/bin/qemu-arm-static",
	"qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "pacman-key --init",
        "pacman-key --populate archlinuxarm"
      ]
    }
  ]
}
